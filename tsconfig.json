{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "ES2020",
    "sourceMap": true,
    "allowJs": true,
    "baseUrl": ".",
    "outDir": "./dist",
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "paths": {
      "~/*": ["src/*"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": ["node_modules"]
}
